# ===== Core =====
DOMAIN=http://localhost:8000
ADMIN_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING

# ===== CORS =====
# For local dev, localhost is fine. For prod, set your real site(s).
CORS_ALLOWED_ORIGINS=http://localhost:8000

# ===== Database =====
DATABASE_URL=sqlite:///./glass.sqlite3

# ===== Downloads =====
# Point to your built installer (relative to server/ or absolute path)
WINDOWS_INSTALLER_PATH=../dist/Glass/Glass.exe

# ===== Rate limiting =====
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=120

# If you deploy behind Cloudflare/nginx/Render/etc. set this to true
TRUST_PROXY=false

# ===== Email (optional, for webhook receipts) =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL="Glass <noreply@yourdomain.com>"

# ===== Payments (optional) =====
# Gumroad
GUMROAD_SIGNATURE_KEY=
# Stripe
STRIPE_WEBHOOK_SECRET=
STRIPE_API_KEY=
# LemonSqueezy
LEMONSQUEEZY_SIGNING_SECRET=
